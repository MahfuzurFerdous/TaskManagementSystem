@model AssignToUserViewModel

<div class="modal-header bg-primary">
    <h5 class="modal-title text-white">
        <i class="fas fa-tasks"></i> Reassign Task
    </h5>
    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    <div class="alert alert-info">
        <strong>Task:</strong> @Model.TaskTitle <br />
        <strong>Current Assignee:</strong> @Model.CurrentAssignee
    </div>

    <form id="assignTaskForm" asp-action="ReassignTask" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="TaskCardId"/>

        <div class="form-group">
            <label asp-for="AssignedToUserName" class="control-label">Assign To</label>
            <select asp-for="AssignedToUserName" asp-items="Model.AvailableUsers" class="form-control select2bs4" required>
                <option value="">-- Select User --</option>
            </select>
            <span asp-validation-for="AssignedToUserName" class="text-danger"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="modal-footer justify-content-between">
            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">
                <i class="fas fa-times-circle"></i> Cancel
            </button>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-user-check"></i> Assign
            </button>
        </div>
    </form>

</div>

@section Scripts {
    <script>
        $(function () {
            $('.select2bs4').select2({
                theme: 'bootstrap4',
                width: '100%'
            });
        });
    </script>
}
