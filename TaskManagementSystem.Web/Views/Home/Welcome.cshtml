@{
    ViewData["Title"] = "Home";
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-4 mb-3 text-primary">👋 Welcome to Task Management System</h1>
            <p class="lead text-secondary mb-4">
                Organize, track, and manage your tasks efficiently with role-based control.
            </p>

            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="card-title mb-3">Please log in or register to manage your tasks</h5>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-success me-2">Login</a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-info">Register</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <script>
        window.location.href = '@Url.Action("Index", "Task")'; // Redirect from client-side if still rendered
    </script>
}
