@model UserProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="content-header">
    <div class="container-fluid">
        <h1 class="m-0 text-dark"><i class="fas fa-user-circle"></i> My Profile</h1>
    </div>
</div>

<div class="container-fluid" style="max-width: 600px;">
    <div class="card card-outline card-primary">
        <div class="card-body">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    @TempData["Success"]
                </div>
            }

            <form asp-action="Profile" method="post" enctype="multipart/form-data">
                <div class="text-center mb-3">
                    <img src="@Model.AvatarUrl" class="img-circle elevation-2" style="height: 120px; width: 120px;" />
                </div>

                <div class="form-group">
                    <label>Change Profile Picture</label>
                    <input asp-for="AvatarFile" type="file" class="form-control" />
                    <input type="hidden" asp-for="AvatarUrl" />
                </div>

                <div class="form-group">
                    <label>Full Name</label>
                    <input asp-for="FullName" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Bio"></label>
                    <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
