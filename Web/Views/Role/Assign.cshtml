@model TaskManagementSystem.Application.DTOs.RoleAssignmentDto

@{
    ViewData["Title"] = "Assign Roles";
}

<div class="content-header">
    <div class="container-fluid">
        <h1 class="m-0 text-dark"><i class="fas fa-user-cog"></i> Assign Roles</h1>
    </div>
</div>

<div class="container-fluid" style="max-width: 600px;">
    <div class="card card-outline card-primary">
        <div class="card-body">
            <form asp-action="Assign" method="post">
                <input type="hidden" asp-for="UserId" />

                <div class="form-group">
                    <label class="fw-bold">Available Roles</label>
                    <div class="row">
                        @for (int i = 0; i < Model.AvailableRoles.Count; i++)
                        {
                            var role = Model.AvailableRoles[i];
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input type="checkbox"
                                           class="form-check-input"
                                           id="role_@i"
                                           name="SelectedRoles"
                                           value="@role"
                                    @(Model.SelectedRoles.Contains(role) ? "checked" : "") />

                                    <label class="form-check-label" for="role_@i">@role</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" asp-controller="User" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Update Roles
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
